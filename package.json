{
  "name": "precision-ppc-site",
  "version": "0.1.0",
  "private": true,
  "description": "Static single-page site for Precision Point Consulting built with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "build": "npm run build:css",
    "start": "serve . -l 5000"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.7",
    "serve": "^14.2.0"
  }
}
